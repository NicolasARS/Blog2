{% extends 'base.html.twig' %}
{% block title%}Users{% endblock %}
{% block body%}
<div class="container">
    <div class="col-xs-12 col-sm-8 col-sm-push-2">
       	<h1>Users</h1>
		<hr>
        <table class="table">
					<thead>
					<tr>
						<th scope="col">Id</th>
						<th scope="col">Email</th>
						<th scope="col">Name</th>
                        <th scope="col">Delete</th>
					</tr>
					</thead>
					<tbody>
					{% for user in users %}
					<tr>
						<th scope="row">{{ user.id }}</th>
						<td>
							{{ user.email }}
						</td>
						<td>
							{{ user.name }}
                        <td>
                        {% if is_granted('ROLE_ADMIN') %}
	    	                 <button class="btn sr-button"><a href="{{ path('delete_user', {'id' :  user.id})}}">Delete User</a></button>
			            {% endif %}	
						</td> 				
					</tr>
					{% endfor %}
					</tbody>
				</table>
			</div>
        </div>
    </div>
</div>

{% endblock %}